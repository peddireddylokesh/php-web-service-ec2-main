{
  "name": "lokesh/php-web-service",
  "description": "A simple PHP web service for Kubernetes deployment",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Peddireddy Lokesh"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
